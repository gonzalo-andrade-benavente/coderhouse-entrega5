<form action="/productos" method="post" id="my-form">
  <div class="form-group">
    <label for="titleInput">Product Title</label>
    <input type="text" class="form-control" id="titleInput" name="titleInput" placeholder="Product Title">
  </div>
   <div class="form-group">
    <label for="priceInput">Product Price</label>
    <input type="text" class="form-control" id="priceInput" name="priceInput" placeholder="Product Price">
  </div>
  <div class="form-group">
    <label for="thumbnailInput">Product Thumbnail</label>
    <input type="text" class="form-control" id="thumbnailInput" name="thumbnailInput" placeholder="Product Thumbnail">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>


